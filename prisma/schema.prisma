generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int          @id @default(autoincrement())
  email         String       @unique
  name          String
  password      String
  createdAt     DateTime     @default(now())
  updatedAt     DateTime?    @updatedAt
  storesCreated Store[]
  stores        UserStores[]
}

model Store {
  id            Int         @id @default(autoincrement())
  name          String
  address       String
  logo          String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime?   @updatedAt
  createdBy     Int
  url           String
  createdByUser User        @relation(fields: [createdBy], references: [id])
  owner         UserStores?
}

model UserStores {
  id        Int       @id @default(autoincrement())
  storeId   Int       @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  ownerId   Int
  userInfo  User      @relation(fields: [ownerId], references: [id])
  storeInfo Store     @relation(fields: [storeId], references: [id])
}
